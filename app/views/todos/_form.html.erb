<%= form_with model: @todo do |form| %>
  <div style="margin-top: 5px">
    <div style="margin-top: 5px"><%= form.label :title %></div>
    <div style="margin-top: 5px"><%= form.text_field :title %></div>
    <% @todo.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div style="margin-top: 10px">
    <div style="margin-top: 5px"><%= form.label :description %></div>
    <div style="margin-top: 5px"><%= form.text_area :description, :rows => "5", :cols =>"100%" %></div>
    <% @todo.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div style="margin-top: 5px">
    <div style="margin-top: 5px"><%= form.label :status %></div>
    <div style="margin-top: 5px"><%= form.select :status, ["To Do", "Doing", "Done"], selected: "To Do" %></div>
  </div>

  <div style="margin-top: 10px">
    <%= form.submit %>
  </div>
<% end %>