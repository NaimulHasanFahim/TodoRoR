<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>My Todo App</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
  <style>
      body {
          font-family: Arial, sans-serif;
          background-color: #f1f1f1;
          padding: 20px;
      }

      h1 {
          text-align: center;
          color: #333;
      }

      ul {
          list-style-type: none;
          padding: 0;
          margin: 0;
      }

      li {
          background-color: #fff;
          padding: 10px;
          margin-bottom: 10px;
          border-radius: 5px;
          box-shadow: 0px 2px 2px rgba(0,0,0,0.3);
          display: flex;
          justify-content: space-between;
          align-items: center;
      }

      li .actions {
          display: flex;
          align-items: center;
      }

      li .actions form {
          margin-right: 10px;
      }

      li .actions button {
          background-color: #333;
          color: #fff;
          padding: 5px 10px;
          border: none;
          border-radius: 3px;
          cursor: pointer;
      }

      li .actions button:hover {
          background-color: #555;
      }

      input[type="text"] {
          padding: 10px;
          border: none;
          border-radius: 5px;
          box-shadow: 0px 2px 2px rgba(0,0,0,0.3);
          width: 100%;
          margin-right: 10px;
      }

      input[type="submit"] {
          background-color: #333;
          color: #fff;
          padding: 5px 10px;
          border: none;
          border-radius: 3px;
          cursor: pointer;
      }

      input[type="submit"]:hover {
          background-color: #555;
      }
      a{
          text-decoration:none;
          color: inherit;
      }
  </style>
</head>

<body>
<nav>
  <div class="navbar-header">
    <a class="navbar-brand" href="/">My Todo App</a>
  </div>
</nav>
<br>
<ul>
  <% @todos.each do |todo| %>
<!--    <li>-->
        <li>
          <a href="<%= todo_path(todo) %>">
            <%#= link_to todo.title, todo %>
            <span><%= todo.title %></span>
          </a>
          <span class="actions">
            <form action="/todos/<%= todo.id %>" method="delete">
              <input type="hidden" name="_method" value="delete">
              <button>Delete</button>
            </form>
          </span>
        </li>
<!--    </li>-->
  <% end %>
</ul>
<a href=<%= new_todo_path %>><p>Add Todo</p></a>
<%= yield %>
</body>
</html>
